process {

    withName: 'BLAST_MAKEBLASTDB' {
        ext.args   = { [
            "-dbtype nucl"
            ].join(" ").trim()
        }
    }

    withName: 'BLAST_BLASTN' {
        cpus = 2
        memory = 4.GB
        ext.args   = { [
            "-outfmt 6",
            "-max_target_seqs 2"
            ].join(" ").trim()
        }
    }

}

