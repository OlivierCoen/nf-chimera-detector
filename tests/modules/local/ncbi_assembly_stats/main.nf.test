nextflow_process {

    name "Test Process NCBI_ASSEMBLY_STATS"
    script "modules/local/ncbi_assembly_stats/main.nf"
    process "NCBI_ASSEMBLY_STATS"
    tag "ncbi_assembly_stats"

    test("Has genomes") {

        when {
            process {
                """
                input[0] = "307456"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

    test("Has NO genomes") {

        when {
            process {
                """
                input[0] = "Hydriviridae"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
            assert process.trace.failed().size() == 1
        }

    }

    test("Parent has genomes") {

        when {
            process {
                """
                input[0] = "Mamonoviridae"
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
